# Existing bot control API endpoint
CONTROL_API_BASE_URL=http://127.0.0.1:3200

# Optional bearer token for bot control API
CONTROL_API_TOKEN=

# Allow UI to manage local API process (start/stop)
MANAGED_API_ENABLED=true

# Run from MANAGED_API_CWD (default: repo root from control-ui)
MANAGED_API_COMMAND=npm run start:api
MANAGED_API_CWD=..

# Optional timeouts and buffering
MANAGED_API_STOP_TIMEOUT_MS=15000
CONTROL_API_TIMEOUT_MS=8000
CONTROL_API_START_TIMEOUT_MS=120000
LOG_BUFFER_LIMIT=2000
